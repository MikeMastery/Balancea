<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimerFragment">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="414dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="AGENDA"
            android:textColor="#1B9797"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ajustes"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ajuste"
            android:onClick="onClickImage">
        </ImageView>

        <ImageView
            android:id="@+id/menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/menu"
            android:onClick="onClickImage">
        </ImageView>


    </FrameLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="670dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="60dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/aCirculo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/brujula"
            android:onClick="onClickImage"
            >
        </ImageView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="Area del Circulo"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >

        </TextView>

        <ImageView
            android:id="@+id/aTriangulo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/piramide"
            android:onClick="onClickImage"
            >
        </ImageView>

        <TextView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="Area del Triangulo"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >

        </TextView>

        <ImageView
            android:id="@+id/calendario"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/calendario"
            android:onClick="onClickImage"
            >
        </ImageView>

        <TextView
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:layout_marginLeft="38dp"
            android:text="Recordatorios"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >

        </TextView>


        <ImageView
            android:id="@+id/usuario"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="-590dp"
            android:layout_gravity="right"
            android:src="@drawable/usuario"
            android:layout_marginRight="40dp"
            android:onClick="onClickImage"
            >
        </ImageView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="75dp"
            android:text="Perfil"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >

        </TextView>

        <ImageView
            android:id="@+id/Tcambio"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="right"
            android:src="@drawable/cambio"
            android:layout_marginRight="40dp"
            android:onClick="onClickImage"
            >
        </ImageView>

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="Cambio de Moneda"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >

        </TextView>

        <ImageView
            android:id="@+id/dado"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="26dp"
            android:layout_gravity="right"
            android:src="@drawable/dado"
            android:layout_marginRight="40dp"
            android:onClick="onClickImage"
            >
        </ImageView>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="28dp"
            android:text="Juego de dados"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >

        </TextView>


    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>