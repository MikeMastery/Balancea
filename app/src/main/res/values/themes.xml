<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Balancea" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4A90E2</item>
        <item name="colorPrimaryVariant">#357ABD</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#81C784</item>
        <item name="colorSecondaryVariant">#4CAF50</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background & Surface colors -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FAFAFA</item>
        <item name="colorOnBackground">#212121</item>
        <item name="colorOnSurface">#212121</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#357ABD</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Navigation & Toolbar colors -->
        <item name="toolbarStyle">@style/Widget.Balancea.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.Balancea.BottomNavigation</item>
    </style>

    <style name="Theme.Balancea.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Balancea.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">#4A90E2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="Theme.Balancea.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Estilos adicionales para Toolbar y BottomNavigation -->
    <style name="Widget.Balancea.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">#4A90E2</item>
        <item name="titleTextColor">#FFFFFF</item>
    </style>

    <style name="Widget.Balancea.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#FFFFFF</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
    </style>
</resources>