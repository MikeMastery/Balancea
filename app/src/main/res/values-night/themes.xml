<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Balancea" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryVariant">#2E78E6</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4CAF50</item>
        <item name="colorSecondaryVariant">#388E3C</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background & Surface colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#242424</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#1E4B8D</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Navigation & Toolbar colors -->
        <item name="toolbarStyle">@style/Widget.Balancea.Toolbar.Dark</item>
        <item name="bottomNavigationStyle">@style/Widget.Balancea.BottomNavigation.Dark</item>
    </style>

    <style name="Widget.Balancea.Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">#1E4B8D</item>
        <item name="titleTextColor">#FFFFFF</item>
    </style>

    <style name="Widget.Balancea.BottomNavigation.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#242424</item>
        <item name="itemIconTint">@color/bottom_nav_colors_dark</item>
        <item name="itemTextColor">@color/bottom_nav_colors_dark</item>
    </style>
</resources>